<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="com.curso.pedidos" default-lazy="false">
  <class name="CarritoCompras" table="carritocompras">
     <id name= "id" type= "java.lang.integer">
        <column name="id"/>
        <generator class="identity"/>
    </id>
    <property name="cantidadMaxItem" type="int" optimistic-lock="true" unique="false"> 
        <column lenght="10" name="cantidadMaxItem"/>
    </property> 
    <property name="fecha" type="Date" optimistic-lock="true" unique="false"> 
        <column lenght="10" name="fechaCreacion"/>
    </property> 
    <one-to-one name="carritocompras" column = "UsuarioId" cascade="none"/>
    <many-to-one column="itemCarritoId" name="itemCarrito" cascade="none"/>

  </class>
</hibernate-mapping>
